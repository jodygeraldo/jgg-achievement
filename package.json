{
  "name": "jgg-achievement",
  "description": "Genshin Impact achievement tracker",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "build:css": "yarn generate:css -m",
    "build:remix": "remix build",
    "build": "run-s build:*",
    "dev:remix": "remix watch",
    "dev:css": "yarn generate:css -w",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "fmt": "prettier --write --cache ."
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.6.8",
    "@remix-run/cloudflare-pages": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "cross-env": "^7.0.3",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@tailwindcss/forms": "^0.5.2",
    "@types/node": "18.7.11",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.20.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "remix-flat-routes": "^0.4.3",
    "tailwindcss": "^3.1.8",
    "tailwindcss-radix": "^2.5.0",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.22"
  },
  "engines": {
    "node": ">=14"
  }
}
