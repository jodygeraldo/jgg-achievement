{
  "name": "jgg-achievement",
  "description": "Genshin Impact achievement tracker",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "build:css": "npm run generate:css -- -m",
    "build:remix": "remix build",
    "build": "run-s build:*",
    "predev": "rimraf public/build functions",
    "dev:remix": "remix watch",
    "dev:css": "npm run generate:css -- -w",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --kv KV_CACHE",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint **/*.{ts,tsx}",
    "fmt": "prettier --write --cache .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@conform-to/react": "0.3.0",
    "@conform-to/zod": "0.3.0",
    "@radix-ui/react-checkbox": "^1.0.0",
    "@radix-ui/react-icons": "^1.1.1",
    "@radix-ui/react-label": "^1.0.0",
    "@radix-ui/react-popover": "^1.0.0",
    "@radix-ui/react-scroll-area": "^1.0.0",
    "@radix-ui/react-separator": "^1.0.0",
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-pages": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@supabase/supabase-js": "^1.35.6",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix-params-helper": "^0.4.10",
    "remix-utils": "^3.3.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@tailwindcss/forms": "^0.5.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "18.7.11",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "remix-flat-routes": "^0.4.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "tailwindcss-radix": "^2.5.0",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.27"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --fix **/*.{ts,tsx}",
    "*.{ts,tsx,css,json,yaml}": "prettier --write --cache ."
  }
}
